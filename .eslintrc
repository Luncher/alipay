{
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},
	"rules": {
		"semi": ["error", "always"],
		"eqeqeq": "warn",
		"no-console": "off",


		"no-multi-spaces": 0,
		"no-underscore-dangle": [
			0
		],
		"consistent-return": 0,
		"no-unused-expressions": [
			2,
			{
				"allowShortCircuit": true
			}
		],
		"no-param-reassign": 0,
		"func-names": 0,
		"space-before-function-paren": [
			2,
			"never"
		],
		"comma-dangle": [
			2,
			"never"
		],
		"no-shadow": 0,
		"guard-for-in": 0,
		"no-restricted-syntax": [
			2,
			"WithStatement"
		],

		"space-in-parens": 0,
		"key-spacing": 0,
		"no-unused-vars": [
			2,
			{
				"vars": "all",
				"args": "none"
			}
		],
		"padded-blocks": 0,
		"no-continue": 0,
		"import/no-extraneous-dependencies": 0,
		"import/newline-after-import": 0,
		"no-mixed-operators": 0
	},
	"env": {
		"es6": true,
		"node": true,
		"mocha": true,
		"mongo": true
	}
}